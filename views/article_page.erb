<article>
  <h2><%= @article.title %></h2>
  <p><%= @article.content %></p>
  <img src="<%= @article.photo %>" alt="Photo" height="50%" width="50%">
  <p> Rating: <%= @article.rating %>/5</p>
</article>

<hr>

<article>
  <h3>Comments</h3>
  <% @commentaires.each do |commentaire| %>
  <p>
    <%= commentaire.content %>
  </p>
  <% end %>
</article>

<hr>

<article>
  <form method="post" action="/comment/<%= @article.id %>">
    <p>
      <label for="content">Comment: </label>
      <input type="text" name="content">
    </p>
    <p>
      <input type ="submit" value="Add Comment">
    </p>
  </form>
</article>


<hr>
<article>
  <form method="post" action="/article/<%= @article.id %>">
    <p>
      <input type="hidden" name="_method" value="delete">
    </p>
    <p>
      <button type="submit">Delete Article</button>
    </p>
  </form>
</article>

<article>
  <h2>Edit Article</h2>
  <form method="post" action="/article/<%= @article.id %>">
    <input type="hidden" name="_method" value="put">
    <p>
      <label for="title">Title: </label>
      <input type="text" name="title" value="<%= @article.title %>">
    </p>
    <p>
      <label for="content">Content: </label>
      <textarea name="content" rows="4" cols="50"><%= @article.content %></textarea>
    </p>
    <p>
      <label for="photo">Photo: </label>
      <input type="text" name="photo" value="<%= @article.photo %>">
    </p>
    <p>
      <label for="rating">Rating: </label>
      <input type="text" name="rating" value="<%= @article.rating %>">
    </p>
    <p>
      <input type="submit" value="Update Article">
    </p>
  </form>
</article>
